<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header popUpTitle">
                <div class="title">Change Password</div>
                <span class="cross"></span>
            </div>
            <div class="modal-body robotoregular">
                <div class="row" id="avError" style="display:none;">
                    <div class="col-xs-12">
                        <div class="errorText"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-8">
                        <input name="password" error="oldPwdError" id="oldPassword" class="form-control" type="password" value="" autocomplete="off" placeholder="Old Password" maxlength="16">
                        <div class="errorText" id="oldPwdError"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-8">
                        <input name="password" error="newPwdError" id="newPassword" class="form-control" type="password" value="" autocomplete="off" placeholder="New Password" maxlength="16">
                        <div class="errorText" id="newPwdError"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-8">
                        <input name="password" error="newConPwdError" id="newConPassword" class="form-control confPwd" type="password" value="" autocomplete="off" placeholder="Confirm New Password" maxlength="16">
                        <div class="errorText" id="newConPwdError"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer robotolight">
                <button type="button" class="btn secondary btn-default cpCancel">Cancel</button>
                <button type="button" class="btn primary btn-default cpUpdate">Update</button>
            </div>
        </div>
    </div>
</div>
